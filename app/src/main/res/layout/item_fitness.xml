<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lytFitness"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:elevation="15dp"
            android:id="@+id/ivProfileImage"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:civ_border="false"
            app:civ_shadow="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:id="@+id/tvName"
                android:textStyle="bold"
                tools:text="Fenil Moradiya" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_calender"
                android:drawablePadding="2dp"
                android:id="@+id/tvBirthdate"
                android:drawableTint="@color/red"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:textColor="@color/light_black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                tools:text="25-12-2018" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_fitness"
                android:drawablePadding="2dp"
                android:id="@+id/tvFitness"
                android:drawableTint="@color/red"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:textColor="@color/light_black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:text="Yoga"
                tools:text="Yoga" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="2dp"
                android:id="@+id/tvAddress"
                android:drawableTint="@color/red"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="top"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="@color/light_black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                tools:text="408, Rajeshwari society, near ABC Mall, kenal road, kamrej, surat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="DETAILS"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/tvRegistrationTime"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="2dp"
                    android:drawableTint="@color/red"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:textColor="@color/light_black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    android:text="07:30 AM"
                    tools:text="07:30 AM" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_currency"
                    android:drawablePadding="2dp"
                    android:id="@+id/tvRegistrationValue"
                    android:drawableTint="@color/red"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:textColor="@color/light_black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    android:text="$ 49.99"
                    tools:text="$ 49.99" />
            </LinearLayout>

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_share" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#ADABAB"/>

</LinearLayout>